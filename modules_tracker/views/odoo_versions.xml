<thrive>
    <data>
        <record id="view_thrive_versions_form" model="ir.ui.view">
            <field name="name">Odoo Versions</field>
            <field name="model">modules.tracker.thrive.versions</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="thrive_version"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_thrive_versions_list" model="ir.ui.view">
            <field name="name">Odoo Versions</field>
            <field name="model">modules.tracker.thrive.versions</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="thrive_version"/>
                </tree>
            </field>
        </record>

        <record id="action_modules_tracker_thrive_versions" model="ir.actions.act_window">
            <field name="name">Odoo Versions</field>
            <field name="res_model">modules.tracker.thrive.versions</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
