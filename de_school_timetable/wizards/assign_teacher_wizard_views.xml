<?xml version="1.0" encoding="utf-8"?>
<thrive>
    <record id="assign_teacher_wizard_form_view" model="ir.ui.view">
        <field name="name">assign.teacher.wizard.form.view</field>
        <field name="model">oe.school.tt.assign.teacher.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="timetable_ids" invisible="1"/>
                        <field name="teacher_id" 
                            options="{'no_create':True, 'no_edit':True}"
                            
                        />
                    </group>
                    
                </group>
                <footer>
                    <button name="action_assign_teacher" string="Assign" type="object" class="btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    
</thrive>
