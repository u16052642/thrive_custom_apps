<?xml version="1.0" encoding="utf-8"?>
<thrive>
    <record id="room_allocation_wizard_form_view" model="ir.ui.view">
        <field name="name">room.allocation.wizard.form.view</field>
        <field name="model">oe.school.tt.room.alloc.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="timetable_ids" invisible="1"/>
                        <field name="classroom_id" 
                            options="{'no_create':True, 'no_edit':True}"
                            
                        />
                    </group>
                    
                </group>
                <footer>
                    <button name="action_room_allocation" string="Allocate" type="object" class="btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    
</thrive>
